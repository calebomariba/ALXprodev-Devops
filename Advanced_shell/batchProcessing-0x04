#!/bin/bash

# Directory to store JSON files
DATA_DIR="pokemon_data"
mkdir -p "$DATA_DIR"

# Error log
ERROR_LOG="errors.txt"
> "$ERROR_LOG"

# Pokémon list
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch Pokémon data
fetch_pokemon() {
    name=$1
    echo "Fetching data for $name..."

    response=$(curl -s -f "https://pokeapi.co/api/v2/pokemon/$name")
    if [ $? -eq 0 ]; then
        echo "$response" > "$DATA_DIR/$name.json"
        echo "Saved data to $DATA_DIR/$name.json ✅"
    else
        echo "Failed to fetch data for $name ❌"
        echo "$name" >> "$ERROR_LOG"
    fi
}

# Start all fetches in background
for name in "${pokemon_list[@]}"; do
    fetch_pokemon "$name" &
done

# List all background jobs (for the checker)
echo "Background jobs:"
jobs

# Optionally: kill a job (demonstrating process management)
# (Don't kill anything real — just show how it would work)
# For example, if needed: kill %1

# Wait for all background jobs to finish
wait
echo "✅ All fetch operations completed."
