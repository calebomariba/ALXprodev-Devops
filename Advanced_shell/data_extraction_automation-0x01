#!/bin/bash

# Extract values using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Weight in kg, remove trailing ".0" if present
WEIGHT=$(jq '.weight' data.json | awk '{ kg=$1/10; sub(/\.0$/, "", kg); print kg }')

# Height in meters, keep 1 decimal always
HEIGHT=$(jq '.height' data.json | awk '{ printf "%.1f", $1/10 }')

# Output the final result
echo "$NAME is of type $TYPE, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
